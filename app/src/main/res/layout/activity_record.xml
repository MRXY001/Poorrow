<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RecordActivity">

    <!--支出，收入，借贷-->
    <RadioGroup
        android:id="@+id/ll_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/cb_spending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spending"/>

        <RadioButton
            android:id="@+id/cb_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/income" />

        <RadioButton
            android:id="@+id/cb_borrowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/borrowing" />

    </RadioGroup>

    <!--选择列表-->
    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_check">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_kind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

    <!--输入数据-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lb_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_amount" />

            <EditText
                android:id="@+id/ev_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:labelFor="@id/lb_amount" />

        </LinearLayout>


        <EditText
            android:id="@+id/ev_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="@string/bill_note_hint"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>